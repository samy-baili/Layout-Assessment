<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/general_activity_space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/bestseller_title_grid_layout"
            style="@style/TextViewSectionTile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all_lips_button_grid_layout"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/best_sellers_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/page_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/add_article_views_dummy_layout" />

        <include
            android:id="@+id/page_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/add_article_views_dummy_layout" />

        <include
            android:id="@+id/page_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/add_article_views_dummy_layout" />

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>